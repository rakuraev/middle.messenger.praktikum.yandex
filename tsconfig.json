{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es2017",
    "module": "CommonJS",
    "rootDir": "src",
    "typeRoots": ["node_modules/@types", "typings/app.d.ts"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "strictNullChecks": true,
    "outDir": "dist/lib",
    "paths": {
      "app": ["./src/app"],
      "app/*": ["./src/app/*"],
      "entities/*": ["./src/entities/*"],
      "pages": ["./src/pages"],
      "pages/*": ["./src/pages/*"],
      "shared/*": ["./src/shared/*"],
      "processes/*": ["./src/processes/*"],
      "widgets/*": ["./src/widgets/*"]
    }
  },
  "include": ["./src/**/*.ts", "./**/*.d.ts"]
}
