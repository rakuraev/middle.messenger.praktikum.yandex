{
  "name": "yandex.praktikum.messanger",
  "version": "0.0.1",
  "description": "Web-application \"chat\"",
  "scripts": {
    "dev": "parcel --port 3000",
    "build": "rimraf dist && parcel build index.html",
    "build:docker": "parcel build index.html",
    "start:express": "cd server && node index.js",
    "types": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint-fix": "npm run lint --fix",
    "start": "concurrently \"npm run build\" \"npm run start:express\""
  },
  "keywords": [
    "ya_praktikum",
    "messanger"
  ],
  "author": "Klyuev Nikita",
  "license": "ISC",
  "dependencies": {
    "dotenv": "16.0.1",
    "express": "4.18.1",
    "handlebars": "4.7.7",
    "nanoid": "^4.0.0"
  },
  "devDependencies": {
    "@feature-sliced/eslint-config": "^0.1.0-beta.6",
    "@parcel/transformer-postcss": "2.6.2",
    "@types/handlebars": "4.1.0",
    "@typescript-eslint/eslint-plugin": "5.31.0",
    "@typescript-eslint/parser": "5.31.0",
    "autoprefixer": "10.4.7",
    "babel-eslint": "10.1.0",
    "concurrently": "7.3.0",
    "eslint": "8.20.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-boundaries": "^3.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "parcel": "2.6.2",
    "parcel-reporter-static-files-copy": "1.3.4",
    "parcel-transformer-hbs": "1.0.4",
    "postcss": "8.4.14",
    "postcss-css-variables": "0.18.0",
    "postcss-import": "14.1.0",
    "postcss-mixins": "9.0.3",
    "postcss-modules": "4.3.1",
    "postcss-nesting": "10.1.10",
    "prettier": "2.7.1",
    "reset-css": "5.0.1",
    "rimraf": "3.0.2",
    "stylelint": "14.10.0",
    "stylelint-config-standard": "27.0.0",
    "stylelint-prettier": "2.0.0",
    "typescript": "4.8.4"
  },
  "source": "index.html",
  "alias": {
    "app": "./src/app",
    "entities": "./src/entities",
    "pages": "./src/pages",
    "shared": "./src/shared",
    "processes": "./src/processes",
    "widgets": "./src/widgets"
  },
  "staticFiles": {
    "staticPath": "static",
    "staticOutPath": "static"
  }
}