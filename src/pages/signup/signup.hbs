<main class="signup-page">
  <section class="signup-form__wrapper">
    <form class="signup-form">
      <h1 class="signup-form__title">Регистрация</h1>
      {{> input placeholder="Почта" id="email" type="text" errorMesage="Почта уже существует"}}
      {{> input placeholder="Логин" id="login" type="text" errorMesage="Логин уже существует"}}
      {{> input placeholder="Имя" id="first_name" type="text" errorMesage=""}}
      {{> input placeholder="Фамилия" id="last_name" type="text" errorMesage=""}}
      {{> input placeholder="Пароль" id="password" type="password" errorMesage="Пароли не совпадают"}}
      {{> input placeholder="И еще разочек Пароль" id="password_repeat" type="password" errorMesage="Пароли не совпадают"}}
      {{> button text="Зарегистрироваться" modificator="blue"}}
      <a class="signup-form__registration-link" href="/">Или все-таки есть аккаунт?</a>
    </form>
  </section>
</main>